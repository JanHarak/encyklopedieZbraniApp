<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:paddingTop="16dp"
            android:id="@+id/textView1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"
            android:text="Encyklopedie zbraní mobilní aplikace je založena na knize Pistole a Revolvery, kterou napsal Milan Harák obohacená o 3D modely některých položek. " />

        <TextView
            android:paddingTop="8dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"
            android:text="Aplikace obsahuje přes 200 zbraní,převážně zbraně středoevropské puškařské produkce a až na výjimky se jedná o zbraně sběratelům dostupné. To samé platí i o amerických revolverech. Téměř u každé pistole je navíc vyobrazena i střela či náboj. " />

        <TextView
            android:paddingTop="12dp"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"
            android:text="V aplikaci je možné nalézt i kusy, které jsou možné koupí získat." />

        <TextView
            android:paddingTop="8dp"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"
            android:text="Více informací naleznete na webových stránkách." />


        <TextView
            android:paddingTop="44dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:id="@+id/madeBy"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:text="Vyrobil: Ing. Jan Harák" />
        <TextView
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="44dp"
            android:id="@+id/version"
            app:layout_constraintTop_toBottomOf="@+id/madeBy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:text="Verze: 1.1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
